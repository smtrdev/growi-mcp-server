{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./"],
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "jest.config.ts", "jest.setup.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
} 